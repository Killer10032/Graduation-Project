<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ArticleMapper">
    <select id="getAllArticleInfo" resultType="com.example.demo.entity.DTO.ArticleDTO">
        select aid, title, create_time, author
        from article
    </select>

    <delete id="deleteArticleByAid">
        delete
        from article
        where aid = {aid}
    </delete>

    <select id="getContentByAid" resultType="com.example.demo.entity.DTO.ArticleDTO">
        select *
        from article
        where aid = {aid}
    </select>

</mapper>
